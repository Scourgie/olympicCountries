@using dataTransferOlympicGames.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<Country>
@{
    ViewData["Title"] = "Olympic Countries";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower() ? "active" : "");
    }
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            <!-- <a asp-action="Index" asp-route-activeGame="all" asp-route-activeCat="@ViewBag.ActiveCat" class="list-group-item @Active("all", ViewBag.ActiveGame)">All</a> -->
            @foreach(Game gam in ViewBag.Games)
            {
                <a asp-action="Index" asp-route-activeGame="@gam.GameID" asp-route-activeCat="@ViewBag.ActiveCat" class="list-group-item @Active(gam.GameID, ViewBag.ActiveGame)">@gam.Name</a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
             <!-- <a asp-action="Index" asp-route-activeGame="@ViewBag.ActiveGame" asp-route-activeCat="all" class="list-group-item @Active("all", ViewBag.ActiveCat)">All</a> -->
            @foreach(Category cat in ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-activeGame="@ViewBag.ActiveGame" asp-route-activeCat="@cat.CategoryID" class="list-group-item @Active(cat.CategoryID, ViewBag.ActiveCat)">@cat.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model)
            {
                <li class="list-inline-item">
                    <img src="~/images/@country.LogoImage" alt="@country.Name" title="@country.Name | @country.Game.Name @country.Category.Name" height="200px" width="300px"/>
                </li>
            }
        </ul>
    </div>
</div>
<script src="js/jquery-2.1.4.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
