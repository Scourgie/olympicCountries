@using dataTransferOlympicGames.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model CountryListViewModel
@{
    ViewData["Title"] = "Country Details";
}

<h2 class="text-center p-2">Country Details</h2>

<div class="row">

    <div class="col">

        <ul class="list-group text-center">

            <li class="list-group-item">

                <img src="~/images/@Model.Country.LogoImage" alt="" height="200px" width="300px" />
                <h3>@Model.Country.Name</h3>

            </li>

            <li class="list-group-item">

                <h4>Game: @Model.Country.Game.Name</h4>

            </li>

            <li class="list-group-item">

                <form asp-action="Add" asp-controller="Favorites" method="post">

                    <a asp-action="Index" class="btn btn-primary" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCat="@Model.ActiveCat">Return to Home Page</a>
                    <button type="submit" class="btn btn-primary">Add to Favorites</button>
                    <input type="hidden" asp-for="Country.CountryID" />

                </form>

            </li>

        </ul>

    </div>

</div>
